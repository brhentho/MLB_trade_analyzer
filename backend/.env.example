# Baseball Trade AI - Backend Environment Variables
# Copy this file and rename to .env, then fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1

# Supabase Configuration  
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key-here
SUPABASE_SECRET_KEY=your-supabase-service-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_ENV=development
APP_PORT=8000
APP_HOST=0.0.0.0
DEBUG=true

# Security
JWT_SECRET=your-super-secret-jwt-key-here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/baseball_trade_ai

# External APIs (Optional)
BASEBALL_REFERENCE_API_KEY=your-api-key-here
FANGRAPHS_API_KEY=your-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# CrewAI Configuration
CREW_MAX_EXECUTION_TIME=300
CREW_MEMORY_ENABLED=true
CREW_VERBOSE=true

# Performance Settings
CACHE_TTL=3600
MAX_CONCURRENT_ANALYSES=5
REQUEST_TIMEOUT=60

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_COMMUNITY_FEATURES=false
ENABLE_PREMIUM_FEATURES=false