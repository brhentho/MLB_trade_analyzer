{
  "name": "baseball-trade-ai-frontend",
  "version": "1.0.0",
  "description": "Frontend for Baseball Trade AI - MLB front office simulation with CrewAI multi-agent system",
  "keywords": ["baseball", "mlb", "trades", "ai", "crewai", "next.js", "typescript"],
  "author": "Baseball Trade AI Team",
  "homepage": "https://github.com/bhenthorn2757/MLB_trade_analyzer",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhenthorn2757/MLB_trade_analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/bhenthorn2757/MLB_trade_analyzer/issues"
  },
  "private": false,
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.(test|spec)\\.(js|ts|tsx)$ --testPathIgnorePatterns=e2e",
    "test:integration": "jest --testPathPattern=__tests__/integration/",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:install": "playwright install",
    "test:all": "npm run test:unit && npm run test:integration && npm run e2e",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "bundle-analyzer": "npx @next/bundle-analyzer",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@sentry/nextjs": "^8.0.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vercel/edge": "^1.1.0",
    "autoprefixer": "^10.0.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.303.0",
    "next": "15.0.3",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^4.0.11",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "web-vitals": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@playwright/test": "^1.40.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "ajv": "^8.17.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "terser-webpack-plugin": "^5.3.0",
    "ts-jest": "^29.1.1",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.(test|spec).{js,jsx,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/e2e/",
      "<rootDir>/.next/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/setupTests.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  }
}