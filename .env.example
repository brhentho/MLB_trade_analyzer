# Baseball Trade AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SECRET_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-public-key-here

# OpenAI Configuration (for AI agents)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Redis for caching (if you set up Redis)
REDIS_URL=redis://localhost:6379

# Optional: Anthropic API (if using Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Environment
ENVIRONMENT=development

# Security Configuration (REQUIRED IN PRODUCTION)
REVALIDATION_SECRET=your-32-character-random-secret-here-change-this-in-production

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Rate Limiting Configuration
DATA_UPDATE_DELAY=1.0
STATCAST_DELAY=2.0

# Baseball Data Sources
# Most are free APIs, but some may require registration
BASEBALL_REFERENCE_DELAY=1.0
FANGRAPHS_DELAY=1.5